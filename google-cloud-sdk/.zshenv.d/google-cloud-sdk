# The next line updates PATH for the Google Cloud SDK.
if [[ -f "${HOME}/opt/google-cloud-sdk/path.zsh.inc" ]]
then
  source "${HOME}/opt/google-cloud-sdk/path.zsh.inc"
elif [[ $(which brew) && -f "$(brew --prefix)/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.zsh.inc" ]]
then
  source "$(brew --prefix)/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.zsh.inc"
fi

# The next line enables shell command completion for gcloud.
if [[ -f "${HOME}/opt/google-cloud-sdk/completion.zsh.inc" ]]
then
  source "${HOME}/opt/google-cloud-sdk/completion.zsh.inc"
elif [[ $(which brew) && -f "$(brew --prefix)/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/completion.zsh.inc" ]]
then
  source "$(brew --prefix)/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/completion.zsh.inc"
fi
